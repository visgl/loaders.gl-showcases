{
  "compilerOptions": {
    "strict": true,
    "outDir": "./build/",
    "module": "esnext",
    "target": "es6",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    // Docs - https://www.typescriptlang.org/tsconfig#noImplicitAny
    "noImplicitAny": false
  }
}
